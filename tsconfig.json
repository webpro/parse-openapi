{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "types": ["node"],
    "rootDir": "src",
    "moduleResolution": "node",
    "declaration": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules"]
}
